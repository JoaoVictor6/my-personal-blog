---
interface Props {
	company: string;
  timeRange: string;
	description: string;
	topics: string[];
}

const { description, timeRange, company, topics } = Astro.props as Props;
---

<section class="space-y-4">
  <div class="flex items-center gap-2 flex-wrap">
    <h2 class="text-2xl dark:text-white font-semibold text-slate-900">
      {company}
    </h2>
    <span class="text-lg font-semibold dark:text-gray-400 text-slate-600">
      {timeRange}
    </span>
  </div>

  <ul class="list-disc pl-6">
    {topics.map(topic => <li>{topic}</li>)}
  </ul>

  <p class="text-lg leading-tight">
    {description}
  </p>
</section>